<!-- Start Article Section -->

<div class="section">
	<div class="intro-card">
		<h1><i class="fas fa-pen-alt"></i> Les derniers articles publi√©s</h1>
		<a class="card-access" href="{{path("news")}}">Acceder aux news</a>
	</div>
	<div class="polaroids owl-carousel">
		{% for article in articles %}
			<div class="card">
				<div class="card-picture">
					<img src="{{ asset('uploads/' ~ article.image) }}" alt=""/>
				</div>
				<h2>{{ article.title|capitalize }}</h2>
				<p> Par <i class="far fa-user"></i> {{ article.user.username }} </p>
				<button class"card-button">
					<a href="{{path("article_view",{slug : article.slug})}}">Lire l'article</a>
				</button>
			</div>
		{% endfor %}
	</div>
</div>
<!-- End Article Section -->
