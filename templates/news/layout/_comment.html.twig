<!-- Start Comment -->
<div class="bloc-comment">
	<h1>Commentaires
		<i class="far fa-comments"></i>
	</h1>
	{% if comments is empty %}
	<p class="bottom-link">Il n'y a pas encore de commentaires sur cet article </p>
	{% endif %}
		{% for comment in comments %}
	<div class="solo-comment">
			<div class="user-info">
				<img class="avatar" src="https://steemitimages.com/p/3MxaK27PJLbN4WbSHXdEUTWy3cWzqS69NSLiZRie9xTej1x?format=match&mode=fit&width=640" alt="avatar">
