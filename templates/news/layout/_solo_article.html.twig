<!-- Start Solo Article  -->
<div class="solo-article">
	<article>
		<h1>
			{{ article.title|capitalize}}</h1>
		<div class="display">

			<div id="deadSimpleLightbox" class="container">
				<div class="row">
					<div class="article-image">
						<img class="img-solo-article" src="{{ asset("uploads/" ~ article.image) }}" alt="Decription image">
					</div>
				</div>
				<div class="article-content">
					{% for category in article.categories %}
						<a class="category-btn {{ category.name}} " href="{{ path("articles__by_category",{id: category.id}) }}">{{ category.name|capitalize }}</a>
					</span>
				{% endfor %}
				<p><i class="far fa-clock"></i> Publi√© le {{ article.createdAt.date|date("d/m/Y") }}</p>
				<p> Par <i class="far fa-user"></i> {{ article.user.username }}</p>
				<p> <i class="far fa-comments"></i>  {{ article.comments|length }} Commentaire(s)</p>

				<p>{{ article.content}}</p>
			</div>
		</div>
	</article>
</div>
