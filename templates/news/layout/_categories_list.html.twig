{# Start Article By Category Section #}
<div class="section category-list">
	<div class="intro-card">
        <h1> <i class="far fa-bookmark"></i> Les articles par cat√©gorie</h1>
    </div>
    <div class=" polaroids owl-carousel">
        {% for category in categories %}
        <div class="card ">
            <div class="card-picture">
                <img src="{{ asset("images/categories/" ~ category.name ~ ".jpg") }}" alt="{{ category.name}}">
            </div>
            <div class="info">
                <p>{{ category.name|capitalize}}</p>
                <button class="card-button wobble-bottom"><a href="{{ path("articles__by_category",{id: category.id}) }}">Voir tout les articles</a></button>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{# EndArticle By Category Section #}
